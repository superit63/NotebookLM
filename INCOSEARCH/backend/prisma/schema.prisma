// Prisma Schema for INCOSEARCH
// Database: SQLite (lightweight, easy backup)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MANAGEMENT
// ============================================
model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   // Hashed with bcrypt
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  chats Chat[]
}



// ============================================
// CHAT & MESSAGES
// ============================================
model Chat {
  id        String    @id @default(uuid())
  title     String    @default("New Chat")
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]
}

model Message {
  id        String   @id @default(uuid())
  chatId    String
  role      String   // "user" or "assistant"
  content   String
  citations String?  // JSON string of citations from NotebookLM
  createdAt DateTime @default(now())

  // Relations
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

// ============================================
// DOCUMENT MANAGEMENT
// ============================================
model Document {
  id            String         @id @default(uuid())
  filename      String
  originalPath  String
  category      String
  status        String @default("PENDING")
  notebookSrcId String?        // Source ID in NotebookLM
  mergedIntoId  String?        // If merged into another file
  uploadedAt    DateTime       @default(now())
  syncedAt      DateTime?
}


